# Maintainer: Patrick D. M. Siegl <archlinux@siegl.it>

pkgname=epiphany-pal
pkgver=2016.11
pkgrel=2
pkgdesc='Adapteva Epiphany pal library'
arch=(i686 x86_64 armv7h armv7l)
url='http://www.adapteva.com/'
license=('Apache License')
provides=(epiphany-pal)
makedepends=(epiphany-elf-gcc epiphany-lib) # requires ARM (cross-)compiler!
depends=(epiphany-lib)
options=(staticlibs !strip !buildflags)
source=("https://github.com/parallella/pal/archive/$pkgver.zip")
sha256sums=('35120785b1f0fce0267ffab186c4a106761080fe0afdc48b389a3ef268020a54')

build() {
  cd $srcdir/pal-$pkgver

  ./bootstrap
  ./configure --prefix=/opt/adapteva/esdk.$pkgver/tools/host.$CARCH \
              --enable-device-epiphany --enable-device-epiphany-sim \
              --disable-benchmark \
              --disable-examples \
              --disable-tests \
              --enable-fast-install
  make all
}

package() {
  cd $srcdir/pal-$pkgver

  make DESTDIR="$pkgdir/" install
  rm -rf $pkgdir/opt/adapteva/esdk.$pkgver/epiphany-elf # doubled given

  install -d -m 0755 $pkgdir/opt/adapteva/esdk.$pkgver/tools
  install -d -m 0755 $pkgdir/opt/adapteva/esdk.$pkgver/tools/host.$CARCH
  install -d -m 0755 $pkgdir/opt/adapteva/esdk.$pkgver/tools/host.$CARCH/include/

  mv $pkgdir/opt/adapteva/esdk.2016.11/lib $pkgdir/opt/adapteva/esdk.$pkgver/tools/host.$CARCH/.
  mv $pkgdir/opt/adapteva/esdk.2016.11/include/pal/* $pkgdir/opt/adapteva/esdk.$pkgver/tools/host.$CARCH/include/.

  rm -rf $pkgdir/opt/adapteva/esdk.$pkgver/include
}

